# Editor configuration, see https://editorconfig.org
root = true

# Default for all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript / Angular
[*.ts]
indent_size = 2
quote_type = single
ij_typescript_use_double_quotes = false

# HTML / CSS (Angular + Tailwind)
[*.{html,css}]
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

# Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false
